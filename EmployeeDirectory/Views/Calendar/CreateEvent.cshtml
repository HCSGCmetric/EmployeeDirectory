@model EmployeeDirectory.Entity.CalendarEventEntity

@{
    ViewBag.Title = "CreateEvent";
}

<script src="~/js/bootstrap-multiselect.js"></script>
<link href="~/css/bootstrap-multiselect.css" rel="stylesheet" />
@*<link href="~/Content/themes/base/jquery.simple-dtpicker.css" rel="stylesheet" />
<script src="~/Scripts/jquery.simple-dtpicker.js"></script>*@
<style>
    .multiselect.dropdown-toggle.btn.btn-default {
        /*margin-right: 5px;*/
        max-width: 130px;
        overflow: hidden;
    }

    .dropdown-menu {
        max-height: 158px;
        overflow: auto;
    }
</style>


<div class="container-fluid">
    <br />
    @if (ViewBag.ErrorMessage != "" && ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    @using (Html.BeginForm("CreateEvent", "Calendar", FormMethod.Post, new { @id = "CalendarForm", enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header" style="margin-bottom:20px;">
                        <h3 class="box-title">Add Event</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="inputEmail" class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2">Event Title<span style="color:red;">*</span></label>
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4">
                                    @Html.HiddenFor(m => m.ID)
                                    @Html.TextBoxFor(m => m.EventTitle, new { @class = "form-control", @placeholder = "Event Title" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2">Event Start DateTime <span style="color:red;">*</span></label>
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4">
                                    @Html.TextBoxFor(m => m.EventStartTime, new { @class = "form-control datetimepicker4", @name = "date", @placeholder = "Event Start Time" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2">Event End DateTime <span style="color:red;">*</span></label>
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4">
                                    @Html.TextBoxFor(m => m.EventEndTime, new { @class = "form-control datetimepicker4", @placeholder = "Event End Time" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2">Event Location<span style="color:red;">*</span></label>
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4">
                                    @Html.TextBoxFor(m => m.EventLocation, new { @class = "form-control", @placeholder = "Event Location" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2">Event Details<span style="color:red;">*</span></label>
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4">
                                    @Html.TextBoxFor(m => m.EventDetails, new { @class = "form-control", @placeholder = "Event Details" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail" class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2">User Type</label>
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4">
                                    @Html.DropDownListFor(m => m.EventAttendee, ViewBag.EventAtteneeList as List<SelectListItem>, new { @class = "form-control selectmultidata", @multiple = "multiple" })
                                </div>
                            </div>
                            @*<div class="form-group">
                                    <label for="inputEmail" class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2">Group Name</label>
                                    <div class="col-xs-12 col-sm-10 col-md-10 col-lg-4">
                                        @Html.DropDownListFor(m => m.GroupId, ViewBag.GroupMasterList as List<SelectListItem>, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail" class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2">&nbsp;</label>
                                    <div class="col-xs-12 col-sm-10 col-md-10 col-lg-6">
                                        <div class="checkbox">
                                            <label>
                                                @Html.CheckBoxFor(m => m.IsLocked, new { @class = "checkbox" })Is Locked?
                                            </label>
                                        </div>
                                    </div>
                                </div>*@
                        </div>
                    </div>

                    <div class="footer-header">
                        <div class="col-xs-12">

                            @Html.HiddenFor(m => m.ID)
                            <div class="col-xs-4 pull-right">
                                <button type="submit" class="col-xs-6 btneffect pull-right ">Submit</button>
                                <a title="" href="~/AdminUser/AdminUserList" class="col-xs-6 btneffect pull-right">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>



